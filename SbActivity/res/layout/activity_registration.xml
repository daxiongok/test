<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_back"> 
    
  <RelativeLayout
      android:id="@+id/login_user"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingTop="40dp"
        android:layout_gravity="center_vertical"
      >
      <LinearLayout 
          android:id="@+id/regist"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
        android:background="@drawable/search_box"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
  
          >
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="用户名"
          />
     <View 
     android:layout_width="0.5dp"
     android:layout_height="fill_parent"
       android:background="#ffcccccc"
          android:layout_marginLeft="5dp"
     
     />

     <EditText
         android:id="@+id/user_name_edit"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@null"
         android:ems="10"
         android:textSize="12sp" >

                  
         </EditText>
    
   </LinearLayout>
      
      
   
      <LinearLayout 
          android:id="@+id/regist1"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
        android:background="@drawable/search_box"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/regist"
          >
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="密码"
          />
     <View 
     android:layout_width="0.5dp"
     android:layout_height="fill_parent"
       android:background="#ffcccccc"
          android:layout_marginLeft="5dp"
     
     />
     <EditText
            android:id="@+id/pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
             android:textSize="12sp"
             android:background="@null"
             android:password="true"
             />
    
   </LinearLayout>
    <LinearLayout 
          android:id="@+id/regist2"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
        android:background="@drawable/search_box"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/regist1"
          >
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="确认密码"
          />
     <View 
     android:layout_width="0.5dp"
     android:layout_height="fill_parent"
       android:background="#ffcccccc"
          android:layout_marginLeft="5dp"
     
     />
     <EditText
            android:id="@+id/confirm_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
             android:textSize="12sp"
             android:background="@null"
             android:password="true"
             />
    
   </LinearLayout>
       <LinearLayout 
          android:id="@+id/regist3"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
        android:background="@drawable/search_box"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/regist2"
          >
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="电子邮箱"
          />
     <View 
     android:layout_width="0.5dp"
     android:layout_height="fill_parent"
       android:background="#ffcccccc"
          android:layout_marginLeft="5dp"
     
     />
     <EditText
            android:id="@+id/e_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
             android:textSize="12sp"
             android:background="@null"
             />
    
   </LinearLayout>
   
    <!--  -->
      <LinearLayout 
          android:id="@+id/Agree"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/regist3"
          android:orientation="horizontal"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          >
          <ToggleButton 
              android:id="@+id/isAgree"
               android:layout_width="50dip"  
               android:layout_height="30dip"  
               android:background="@drawable/registration_to_button_selector"
               android:textOn=""
               android:textOff=""
              /> 
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="是否同意本站用户协议"
                  android:textColor="@color/white"
                  />
          
          
      </LinearLayout>
       <LinearLayout 
          android:id="@+id/login_butt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="55dp"
             android:layout_marginRight="55dp"
         android:layout_marginTop="10dp"
          android:gravity="center_vertical"
            android:layout_below="@+id/Agree"
          >
          <ImageButton 
             android:id="@+id/login_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/login_button_i"
             android:onClick="onAction"
              />
             <ImageButton 
             android:id="@+id/register_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/login_button_z"
             android:onClick="onAction"
              />
          
      </LinearLayout>
    
    </RelativeLayout>
     
</LinearLayout>
