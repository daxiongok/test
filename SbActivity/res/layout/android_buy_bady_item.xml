<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/buy_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/buy_member_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/buy_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号  :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/buy_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/buy_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="交易时间 :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/buy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="2014-3-11"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/buy_viwe"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/buy_member_time"
            android:background="@color/red" />

        <RelativeLayout
            android:id="@+id/buy_body_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_viwe" >

            <ImageView
                android:id="@+id/buy_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_body_simple" />

            <LinearLayout
                android:id="@+id/buy_name_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/buy_body"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/buy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红星尔克" />

                <TextView
                    android:id="@+id/buy_xing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="红星尔克" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/color_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_below="@+id/buy_name_body"
                android:layout_toLeftOf="@+id/buy_viwes"
                >

                <TextView
                    android:id="@+id/buy_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="颜色分类  :" />
                 <TextView
                    android:id="@+id/buy_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="红色" />
                
            </LinearLayout>

            <TextView
                android:id="@+id/Return_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/buy_viwes"
                android:text="退款/退货" />

            <View
                android:id="@+id/buy_viwes"
                android:layout_width="0.5dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/buy_name_body"
                android:background="@color/red" />

            <LinearLayout
                android:id="@+id/buy_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/buy_viwes" >

                <TextView
                    android:id="@+id/buy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="60" />

                <TextView
                    android:id="@+id/buy_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="元" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/buy_money" >

                <Button
                    android:id="@+id/buy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/buy_button_back"
                    android:text="确认收货"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>