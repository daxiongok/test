<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"> 
  <RelativeLayout
      android:id="@+id/login_user"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingTop="40dp"
        android:layout_gravity="center_vertical"
      >
     <EditText
            android:id="@+id/login_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="用 户 名:"
            android:drawableRight="@drawable/login_p_t"
             android:background="@drawable/search_box"
             android:layout_marginLeft="55dp"
             android:layout_marginRight="55dp"
     		android:textSize="12sp"
             />
      <EditText
            android:id="@+id/login_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_box"
            android:drawableRight="@drawable/login_p_s"
            android:layout_below="@+id/login_name"
            android:inputType="textPassword"
            android:hint="密\t\t码:"
             android:textSize="12sp"
             android:layout_marginLeft="55dp"
             android:layout_marginRight="55dp"
             android:layout_marginTop="10dp">
    </EditText>
     <LinearLayout 
          android:id="@+id/login_butt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="55dp"
          android:layout_marginRight="55dp"
          android:layout_marginTop="10dp"
          android:gravity="center_vertical"
          android:layout_below="@+id/login_pwd"
          >
          <ImageButton 
             android:id="@+id/login_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/login_button_i"
             android:onClick="onAction"
              />
             <ImageButton 
             android:id="@+id/register_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/login_button_z"
             android:onClick="onAction"
              />
          
      </LinearLayout>
    </RelativeLayout>
     
</LinearLayout>
