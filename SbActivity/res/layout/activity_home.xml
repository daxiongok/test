<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/android_layout_bg" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/home_radio_button_group"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@drawable/android_title_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/home_page_rad"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_bg_selector"
                android:checked="true"
                android:drawableLeft="@drawable/home_s_y" 
                android:text="首页" 
                android:textSize="12sp"          
                />
            <View 
               android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#ffcccccc"
                
                />

            <RadioButton
                android:id="@+id/search_rad"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_bg_selector"
                android:drawableLeft="@drawable/search_exple" 
                 android:text="搜索" 
                android:textSize="12sp"   
                />
            <View 
               android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#ffcccccc"
                
                />

            <RadioButton
                android:id="@+id/member_center_rad"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_bg_selector"
                android:drawableLeft="@drawable/vip_center" 
                  android:text="会员中心" 
                  android:textSize="12sp"
                />
        <View 
               android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#ffcccccc"
                
                />

            <RadioButton
                android:id="@+id/shopping_cart_rad"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_bg_selector"
                android:drawableLeft="@drawable/shopping_cat" 
                 android:text="购物车" 
                android:textSize="12sp" 
                />
            <View 
               android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#ffcccccc"
                
                />
            <RadioButton
                android:id="@+id/more_rad"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_bg_selector"
                android:drawableLeft="@drawable/more" 
                 android:text="更多" 
                android:textSize="12sp" 
                />
        </RadioGroup>
    </LinearLayout>

</TabHost>